/* Simplified Chinese Fortune Teller */
:root {
    --primary-red: #dc2626;
    --deep-red: #991b1b;
    --gold: #fbbf24;
    --rich-gold: #d97706;
    --dark-gold: #92400e;
    --cream: #fef7cd;
    --dark-bg: #1a1a1a;
    --card-bg: #2d1b1b;
    --border-color: #dc2626;
    --text-light: #fef7cd;
    --text-dark: #1a1a1a;
    --shadow-color: rgba(220, 38, 38, 0.3);
    --gold-shadow: rgba(251, 191, 36, 0.4);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, var(--dark-bg) 0%, var(--card-bg) 100%);
    min-height: 100vh;
    color: var(--text-light);
    overflow-x: hidden;
}

/* Background Pattern */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(220, 38, 38, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(251, 191, 36, 0.1) 0%, transparent 50%),
        linear-gradient(45deg, transparent 0%, rgba(220, 38, 38, 0.05) 50%, transparent 100%);
    pointer-events: none;
    z-index: -1;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Header */
.header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px 0;
}

.title {
    font-family: 'Noto Serif SC', serif;
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--gold) 0%, var(--rich-gold) 50%, var(--primary-red) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 8px var(--shadow-color);
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
}

.chinese-char {
    font-size: 4rem;
    color: var(--primary-red);
    text-shadow: 0 0 20px var(--shadow-color);
    animation: glow 3s ease-in-out infinite alternate;
}

@keyframes glow {
    from { text-shadow: 0 0 20px var(--shadow-color); }
    to { text-shadow: 0 0 30px var(--shadow-color), 0 0 40px var(--shadow-color); }
}

.subtitle {
    font-size: 1.2rem;
    color: var(--gold);
    opacity: 0.9;
    font-weight: 400;
}

/* Main Content */
.main-content {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

/* Visualization Container */
.visualization-container {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px var(--shadow-color);
    position: relative;
}

.fortune-board {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
}

.boundary {
    width: 100%;
    padding: 15px 20px;
    border-radius: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    position: relative;
    overflow: hidden;
}

.boundary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s ease;
}

.boundary:hover::before {
    left: 100%;
}

.lucky-boundary {
    background: linear-gradient(135deg, var(--rich-gold), var(--gold));
    color: var(--text-dark);
    box-shadow: 0 4px 15px var(--gold-shadow);
}

.unlucky-boundary {
    background: linear-gradient(135deg, var(--deep-red), var(--primary-red));
    color: var(--text-light);
    box-shadow: 0 4px 15px var(--shadow-color);
}

.boundary-label {
    font-family: 'Noto Serif SC', serif;
    font-size: 1.1rem;
}

.boundary-value {
    font-size: 2rem;
    font-weight: 700;
    font-family: 'Noto Serif SC', serif;
}

.motion-area {
    position: relative;
    width: 100%;
    max-width: 500px;
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: 12px;
    padding: 20px;
}

#brownian-canvas {
    width: 100%;
    height: 200px;
    border-radius: 8px;
    background: linear-gradient(45deg, rgba(0, 0, 0, 0.2), rgba(220, 38, 38, 0.1));
}

/* Special height for graph walk */
.graph-display #brownian-canvas {
    height: 300px;
}

.starting-line {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--gold);
    color: var(--text-dark);
    padding: 5px 12px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 500;
}

.status-display {
    display: flex;
    justify-content: space-around;
    margin-top: 20px;
    gap: 20px;
}

.current-position, .step-counter {
    background: rgba(220, 38, 38, 0.1);
    padding: 15px 20px;
    border-radius: 10px;
    border: 1px solid rgba(220, 38, 38, 0.3);
    text-align: center;
    flex: 1;
}

.position-label, .step-label {
    display: block;
    font-size: 0.9rem;
    color: var(--gold);
    margin-bottom: 5px;
}

#position-value, #step-count {
    font-size: 1.5rem;
    font-weight: 700;
    font-family: 'Noto Serif SC', serif;
    color: var(--text-light);
}

/* Fortune Container */
.fortune-container {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px var(--shadow-color);
    transition: all 0.5s ease;
}

.fortune-scroll {
    text-align: center;
    position: relative;
}

.fortune-title {
    font-family: 'Noto Serif SC', serif;
    font-size: 2rem;
    color: var(--gold);
    margin-bottom: 20px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.fortune-text {
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--text-light);
    margin-bottom: 15px;
    font-style: italic;
}

.fortune-explanation {
    font-size: 1rem;
    color: var(--gold);
    opacity: 0.8;
    line-height: 1.5;
}

/* Controls */
.controls {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin: 20px 0;
}

.fortune-button {
    padding: 15px 30px;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.fortune-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
}

.fortune-button:hover::before {
    left: 100%;
}

.primary {
    background: linear-gradient(135deg, var(--primary-red), var(--deep-red));
    color: var(--text-light);
    box-shadow: 0 4px 15px var(--shadow-color);
}

.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--shadow-color);
}

.secondary {
    background: linear-gradient(135deg, var(--rich-gold), var(--dark-gold));
    color: var(--text-dark);
    box-shadow: 0 4px 15px var(--gold-shadow);
}

.secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--gold-shadow);
}

.tertiary {
    background: linear-gradient(135deg, var(--primary-red), var(--deep-red));
    color: var(--text-light);
    box-shadow: 0 4px 15px var(--shadow-color);
    font-size: 0.95rem;
    padding: 12px 20px;
}

.tertiary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--shadow-color);
}

.fortune-button:active {
    transform: translateY(0);
}

/* Info Panel */
.info-panel {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px var(--shadow-color);
}

.info-panel h3 {
    text-align: center;
    color: var(--gold);
    font-size: 1.5rem;
    margin-bottom: 25px;
    font-family: 'Noto Serif SC', serif;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.info-item {
    display: flex;
    gap: 15px;
    align-items: flex-start;
    padding: 20px;
    background: rgba(220, 38, 38, 0.1);
    border-radius: 12px;
    border: 1px solid rgba(220, 38, 38, 0.2);
    transition: transform 0.3s ease;
}

.info-item:hover {
    transform: translateY(-3px);
}

.info-icon {
    font-size: 2rem;
    flex-shrink: 0;
}

.info-content h4 {
    color: var(--gold);
    margin-bottom: 8px;
    font-size: 1.1rem;
}

.info-content p {
    color: var(--text-light);
    opacity: 0.9;
    line-height: 1.5;
}

/* Footer */
.footer {
    text-align: center;
    margin-top: 40px;
    padding: 20px 0;
    color: var(--gold);
    opacity: 0.8;
    border-top: 1px solid rgba(220, 38, 38, 0.2);
}

/* Animations */
@keyframes particle-glow {
    0%, 100% { 
        filter: drop-shadow(0 0 5px var(--gold));
        transform: scale(1);
    }
    50% { 
        filter: drop-shadow(0 0 15px var(--gold));
        transform: scale(1.2);
    }
}

.particle {
    animation: particle-glow 2s ease-in-out infinite;
}

/* Fortune Result Animations */
.fortune-good {
    background: linear-gradient(135deg, var(--rich-gold), var(--gold));
    border-color: var(--gold);
    color: var(--text-dark);
}

.fortune-bad {
    background: linear-gradient(135deg, var(--deep-red), var(--primary-red));
    border-color: var(--primary-red);
}

/* Icon styling */
.icon {
    display: inline-block;
    font-size: 1.2em;
    margin-right: 8px;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.wave-icon {
    color: var(--gold);
    transform: scaleX(1.2);
}

.target-icon {
    color: var(--primary-red);
    font-size: 1.1em;
}

.lightning-icon {
    color: var(--rich-gold);
    animation: pulse 2s ease-in-out infinite;
}

.graph-icon {
    color: var(--primary-red);
    font-size: 1.3em;
}

.chart-icon {
    color: var(--gold);
    font-size: 1.1em;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 15px;
    }
    
    .title {
        font-size: 2rem;
        flex-direction: column;
        gap: 10px;
    }
    
    .chinese-char {
        font-size: 3rem;
    }
    
    .visualization-container {
        padding: 20px;
    }
    
    .status-display {
        flex-direction: column;
        gap: 15px;
    }
    
    .controls {
        flex-direction: column;
        align-items: center;
    }
    
    .fortune-button {
        width: 100%;
        max-width: 300px;
    }
    
    .info-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 480px) {
    .title {
        font-size: 1.5rem;
    }
    
    .chinese-char {
        font-size: 2rem;
    }
    
    .fortune-title {
        font-size: 1.5rem;
    }
    
    .fortune-text {
        font-size: 1.1rem;
    }
}
